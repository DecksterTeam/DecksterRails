<div id="<%= sym %>" class="deckster-card well well-lg <%= card_classes %>" data-col="<%= col %>" data-row="<%= row %>" data-sizex="<%= sizex %>" data-sizey="<%= sizey %>" data-title="<%= title %>" style="position: absolute;">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid deckster-card-title">
      <div class="navbar-header">
        <span class="navbar-brand">
          <%= title %>
        </span>
      </div>
      <ul class="nav navbar-nav navbar-right deckster-controls">
        <li>
          <a title="Popout" class='deckster-control deckster-popout-handle' style="display: none"><i class="fa fa-rotate-right"></i></a>
        </li>
        <li>
          <a title='Collapse' class='deckster-control deckster-collapse-handle deckster-expand-collapse-handle' style="display: none"><i class="fa fa-compress"></i></a>
        </li>
        <li>
          <a title='Expand' class='deckster-control deckster-expand-handle deckster-expand-collapse-handle'><i class="fa fa-expand"></i></a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="deckster-content">
    <%= summary_html %>
    <%= detail_html %>
  </div>
</div>
