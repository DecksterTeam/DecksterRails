<div id="<%= sym %>" class="deckster-card well well-lg <%= card_classes %>" data-col="<%= col %>" data-row="<%= row %>" data-sizex="<%= sizex %>"
     data-sizey="<%= sizey %>" data-title="<%= title %>" style="position: absolute; display: <%= display %>" data-is-shared=<%= is_shared_view %>
>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid deckster-card-title">
      <div class="navbar-header">
        <span class="navbar-brand deckster-card-draggable">
          <%= title %>
        </span>
      </div>
      <ul class="nav navbar-nav navbar-right deckster-controls deckster-card-draggable">
        <li>
          <a title="Refresh" class='deckster-control deckster-refresh-handle' style="display: none"><i class="fa fa-rotate-right"></i></a>
        </li>
        <li>
          <a title="Popout" class='deckster-control deckster-popout-handle' style="display: none"><i class="fa fa-share"></i></a>
        </li>
        <% if expandable %>
        <li>
          <a title='Collapse' class='deckster-control deckster-collapse-handle deckster-expand-collapse-handle' style="display: none"><i class="fa fa-compress"></i></a>
        </li>
        <li>
          <a title='Expand' class='deckster-control deckster-expand-handle deckster-expand-collapse-handle'><i class="fa fa-expand"></i></a>
        </li>
        <% end %>
        <li>
          <a title="Hide" class='deckster-control deckster-hide-handle'><i class="fa fa-close"></i></a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="deckster-content">
    <% if is_shared_view %>
    <%= shared_html %>
    <% end %>

    <% if !is_shared_view %>
    <%= summary_html %>
    <%= detail_html %>
    <% end %>
  </div>
</div>
