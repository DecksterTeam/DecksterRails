<script type="text/javascript">
    MTheory = function () {
    };
    MTheory.configuration = {};
    MTheory.configuration.root_url = '<%= root_url %>'
    <% uri = root_url.split(/\//)[3] %>
    MTheory.configuration.uri = '<%= (uri.nil?) ? '' : "/#{uri}"  %>'

    MTheory.full_url = function (relative_path) {
        if (relative_path.indexOf('/') == 0) {
            relative_path = relative_path.substr(1)
        }
        return MTheory.configuration.root_url + relative_path
    }
</script>
<%= stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
