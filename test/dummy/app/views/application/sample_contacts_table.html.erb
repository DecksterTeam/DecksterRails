<table id='sample_contacts_table' class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>City</th>
  </tr>
  </thead>
  <tbody></tbody>
  <tfoot>
  <tr>
    <th><input type='text' data-col=0 placeholder='Name'/></th>
    <th><input type='text' data-col=1 placeholder='Email'/></th>
    <th><input type='text' data-col=2 placeholder='Phone'/></th>
    <th><input type='text' data-col=3 placeholder='City'/></th>
  </tr>
  </tfoot>
</table>
<script>
    $(document).ready(function () {
        aoColumns = window.deckster_datatables_utility.to_aoColumns(<%= SampleContactsTableHelper::SAMPLE_CONTACTS_TABLE_COLUMN_FIELDS.to_json.html_safe %>);

        window.deckster_datatables_utility.init(
                '#sample_contacts_table', aoColumns, '<%= deckster.table_path(:sample_contacts) %>',
                1, 'asc');
    });
</script>